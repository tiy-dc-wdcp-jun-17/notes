<p id="notice"><%= notice %></p>

<h1>Houses</h1>
<%= link_to 'New House', new_house_path, class: 'btn btn-success' %>
<table class='table'>
  <thead>
    <tr>
      <th>Location</th>
      <th>Neighborhood</th>
      <th>Bedrooms</th>
      <th>Bathrooms</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.location %></td>
        <td><%= house.neighborhood.name %></td>
        <td><%= house.bedrooms %></td>
        <td><%= house.bathrooms %></td>
        <td><%= house.description %></td>
        <td><%= link_to 'Show', house, class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
